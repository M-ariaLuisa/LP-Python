import os
from dataclasses import dataclass
os.system

@dataclass
class Pessoa:
    nome:str
    email:str
    endereco:str

    def mostrar_dados(self):
        os.system
        print("= Dados do usuário =")
        print(f"""Nome: {self.nome}
Endereco:{self.endereco}
Email:{self.email}
""")

    def mostrar_somente_nome(self):
        print("= Nome do usuário =")
        print(f"Nome:{self.nome}")

print("Solicitando os dados da pessoa")
lista_pessoas = []

for i in range(2):
    pessoa=Pessoa(nome=input("Informe o seu nome:\n"),
            email=input("Informe sua email:\n"),
            endereco=input("Informe seu endereço:\n"))    
    lista_pessoas.append(pessoa)
                    
           
print(f"= Exibindo resultados =")
for pessoa in lista_pessoas:
    pessoa.mostrar_dados()

print(f"= Somente nomes =")
for pessoa in lista_pessoas:
    pessoa.mostrar_somente_nome()



